<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">QuickSave.Frontend</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandDevNav = !expandDevNav">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Devices
            </NavLink>
            @if (expandDevNav)
            {
                <NavLink class="expand-menu" href="adddevice">
                    <span>Input</span>
                </NavLink>
                <NavLink class="expand-menu" href="repaireddevices">
                    <span>In repair</span>
                </NavLink>
                <NavLink class="expand-menu" href="repaireddevices">
                    <span>Repaired</span>
                </NavLink>
                <NavLink class="expand-menu" href="repaireddevices">
                    <span>To repair</span>
                </NavLink>
                <NavLink class="expand-menu" href="repaireddevices">
                    <span>Being repaired</span>
                </NavLink>
                <NavLink class="expand-menu" href="repaireddevices">
                    <span>Near finish</span>
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandParNav = !expandParNav">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Parts
            </NavLink>
            @if (expandParNav)
            {
                <NavLink class="expand-menu" href="parts">
                    <span>To buy</span>
                </NavLink>
                <NavLink class="expand-menu" href="deviceparts">
                    <span>By pc</span>
                </NavLink>
                <NavLink class="expand-menu" href="parts">
                    <span>To order</span>
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandInvNav = !expandInvNav">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Invoices
            </NavLink>
            @if (expandInvNav)
            {
                <NavLink class="expand-menu" href="payinvoices">
                    <span>To pay</span>
                </NavLink>
                <NavLink class="expand-menu" href="paidinvoices">
                    <span>Paid</span>
                </NavLink>
                <NavLink class="expand-menu" href="payinvoices">
                    <span>Not paid</span>
                </NavLink>
                <NavLink class="expand-menu" href="paidinvoices">
                    <span>Paid by costumer</span>
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandVouNav = !expandVouNav">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Voucher
            </NavLink>
            @if (expandVouNav)
            {
                <NavLink class="expand-menu" href="vouchers">
                    <span>By pc</span>
                </NavLink>
                <NavLink class="expand-menu" href="vouchers">
                    <span>Vouchers</span>
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="costumers">
                <span class="oi oi-home" aria-hidden="true"></span> Costumers
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private bool expandDevNav;
    private bool expandParNav;
    private bool expandInvNav;
    private bool expandVouNav;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
